{
    "manifest_version": 3,
    "name": "ReadEase",
    "version": "1.0",
    "description": "Enhance readability by processing text.",
    "permissions": ["contextMenus", "activeTab", "scripting", "storage"],
    "host_permissions": ["https://api.openai.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "ReadEase",
      "default_icon": {
        "16": "icon16.png",
        "24": "icon48.png",
        "32": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
}
  